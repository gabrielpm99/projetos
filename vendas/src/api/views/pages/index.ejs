<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vendas</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            font-family: Arial, Helvetica, sans-serif;
        }
        
        table, th, tr, td {
            border: 1px solid black;
            border-spacing: 0;
            border-collapse: collapse;
        }

        th, td {
            font-size: 20px;
            padding: 5px 10px;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>ID</th>
            <th>Produto</th>
            <th>Preço unitário</th>
            <th>Quantidade</th>
            <th>Preço total</th>
        </tr>
        <% vendas.forEach((venda) => { %>
            <tr>
                <td class="prodId"><%=venda.id%></td>
                <td><%=venda.produto%></td>
                <td>R$ <%=venda.preco%></td>
                <td><%=venda.qtd%></td>
                <td>R$ <%=venda.qtd * venda.preco%></td>
            </tr>
        <% }) %>
    </table>
</body>
</html>